{
  "name": "cupnote",
  "version": "1.0.0-rc.1",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3001",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "check-all": "npm run type-check && npm run lint && npm run format:check",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:headed": "playwright test --headed",
    "lighthouse": "lhci autorun",
    "lighthouse:local": "lhci autorun --config=./lighthouserc.local.js",
    "perf:audit": "npm run build && npm run lighthouse:local"
  },
  "dependencies": {
    "@sentry/nextjs": "^9.43.0",
    "@supabase/supabase-js": "^2.53.0",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@types/node": "^24.1.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.32.0",
    "eslint-config-next": "^15.4.5",
    "lucide-react": "^0.534.0",
    "next": "^15.4.5",
    "postcss": "^8.5.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.3",
    "web-vitals": "^5.0.3"
  },
  "devDependencies": {
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.54.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "jsdom": "^26.1.0",
    "next-pwa": "^5.6.0",
    "prettier": "^3.6.2",
    "vitest": "^3.2.4"
  },
  "description": "나만의 커피 여정을 기록하는 온라인 커피 일기",
  "keywords": [
    "coffee",
    "diary",
    "community",
    "tasting",
    "specialty coffee"
  ],
  "author": "CupNote Team",
  "license": "MIT"
}
