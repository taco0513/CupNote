# Core Configuration
NODE_ENV=development
PORT=3000
BACKEND_PORT=3001

# Frontend URLs
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Backend Configuration
DATABASE_URL=postgresql://cupnote:password@localhost:5432/cupnote_db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-refresh-token-secret-change-this
REFRESH_TOKEN_EXPIRES_IN=30d

# OAuth (optional)
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret
# KAKAO_CLIENT_ID=your-kakao-client-id
# KAKAO_CLIENT_SECRET=your-kakao-client-secret

# File Upload
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880

# Monitoring (Beta/Production)
# SENTRY_DSN=https://...
# VERCEL_ANALYTICS_ID=...

# Email Service (Beta/Production)
# SENDGRID_API_KEY=SG...
# SENDGRID_FROM_EMAIL=hello@cupnote.app

# External Services (optional)
# AWS_ACCESS_KEY_ID=your-aws-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret
# AWS_REGION=ap-northeast-2
# S3_BUCKET_NAME=cupnote-photos

# PWA Configuration
NEXT_PUBLIC_APP_NAME=CupNote
NEXT_PUBLIC_APP_SHORT_NAME=CupNote
NEXT_PUBLIC_APP_DESCRIPTION=나의 커피 감각 저널